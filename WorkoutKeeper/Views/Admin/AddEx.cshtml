@model WorkoutKeeper.Models.Exercise
@{
    ViewBag.Title = "Edit product";
    Layout = "_AdminLayout";
}

<form asp-controller="Admin" asp-action="AddEx" method="post">
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ApproachesNum">кол-во упражнений</label>
        <div><span asp-validation-for="ApproachesNum" class="text-danger"></span></div>
        <input asp-for="ApproachesNum" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description">описание</label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>день</label>
        <input type="text" name="dayName" /><br />
    </div>
    <div class="form-group">
        <label>название тренировки</label>
        <input type="text" name="trainingName" /><br />
    </div>
